{
  "name": "db-sql-toolkit",
  "version": "0.0.1",
  "description": "Helps with SQL statements, database migration, and bulk execution.",
  "author": "atheck",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly --project ./src",
    "build:js": "babel src --out-dir dist --extensions \".ts\" --ignore \"./**/*.test.ts\" --source-maps inline",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "lint": "npx eslint \"src/**/*.ts\"",
    "update": "npx npm-check-updates -i",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/cli": "7.22.10",
    "@babel/core": "7.22.10",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.22.10",
    "@babel/preset-react": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@types/jest": "29.5.3",
    "eslint": "8.47.0",
    "eslint-config-heck": "1.45.2",
    "jest": "29.6.2",
    "rome": "12.1.3",
    "semantic-release": "21.0.7",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "homepage": "https://github.com/atheck/db-sql-toolkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/atheck/db-sql-toolkit.git"
  },
  "keywords": [
    "database",
    "db",
    "sql",
    "statements",
    "migration",
    "bulk"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts"
}